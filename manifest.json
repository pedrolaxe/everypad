{
  "name": "EveryPad",
  "description": "The best Pad with integration to DontPad",
  "version": "0.7.0",
  "author": "Pedro Laxe",
  "content_scripts": [
    {
      "matches": ["http://www.dontpad.com/*"],
      "css": ["style.css"],
      "js": ["jquery.js","script.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "EveryPad"
  },
  "manifest_version": 3,
  "icons":{
  	"16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  }
}